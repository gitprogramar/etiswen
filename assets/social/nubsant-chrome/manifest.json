{
	"manifest_version": 2,
	"name": "Nubsant Social Robot",
	"description": "Nubsant Social boot: like, follow, unfollow.",
	"version": "1.0",
	 "icons": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    },
	 "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/16.png",
		  "32": "images/32.png",
		  "48": "images/48.png",
		  "128": "images/128.png"
      }
    },
	"content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js":      ["content.js"]
    }],
	"permissions": ["activeTab", "declarativeContent", "storage"]
}